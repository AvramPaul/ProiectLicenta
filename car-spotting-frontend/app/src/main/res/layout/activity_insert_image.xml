<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <VideoView
        android:id="@+id/backgroudVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />

    <!-- 1) Select Image Button direct -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectImageButton"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="#0B0B0B"
        android:text="Select Image"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 2) Preview-ul imaginii -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/previewCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/selectImageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1">

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@android:color/darker_gray"/>
</com.google.android.material.card.MaterialCardView>

    <!-- 3) Upload Button -->
<com.google.android.material.button.MaterialButton
    android:id="@+id/uploadImageButton"
    android:layout_width="350dp"
    android:layout_height="48dp"
    android:layout_marginTop="24dp"
    style="@style/Widget.MaterialComponents.Button"
    android:backgroundTint="#FF0000"
    android:text="Upload"
    android:textAllCaps="false"
    android:textColor="#FFFFFF"
    app:layout_constraintTop_toBottomOf="@id/previewCard"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 4) Classifier Response -->
<com.google.android.material.card.MaterialCardView
    android:id="@+id/responseCard"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="#DDDDDD"
    app:strokeWidth="1dp"
    app:layout_constraintTop_toBottomOf="@id/uploadImageButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

<TextView
android:id="@+id/classifierResponseText"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="16dp"
android:text="Classifier response will appear here"
android:textColor="#424242"
android:textSize="14sp"
android:gravity="center"/>
</com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
